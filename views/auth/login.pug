extends ../layouts/layout.pug

block content
    h2 Login
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="", method="POST")
        .form-group
            label(for="username") username
            input#username.form-control(name="username" type="text", style="width: 50%", values=value ? value.username : "" )

        .form-group
            label(for="password") password
            input#password.form-control(name="password" type="password", style="width: 50%", values=value ? value.password : "")
        button.btn.btn-primary Login