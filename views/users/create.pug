extends ../layouts/layout.pug

block content
    .h2 Create User

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name" type="text", style="width: 50%", value=values ? values.name : "")

        .form-group
            label(for="phone") Phone
            input#phone.form-control(name="phone" type="text", style="width: 50%", value=values ? values.phone : "")
        button.btn.btn-primary Create
